<div class="author">
<h1 class="author_body">The Gx Universe</h1>
<p class="author_body">Tech Blog & News</p>
</div>

<!-- display blogs -->
<section class="articles">

    <h2 class="articles_heading">Latest posts</h2>
    <ul class="article-ul">
        <% data.forEach(post => { %>
        <li>
            <a href="/post/<%= post._id %>"> 
                <span><%= post.title %></span>
                <span class="article-list_date"><% post.createdAt.toDateString() %></span>
            </a>
        </li> 
        <% });  %>
    </ul>
    <% if (nextPage !== null) { %>
        <a href="/?page=<%= nextPage %>" class="pagination">&lt; View Older Posts</a>
        <% } %>

    
</section>